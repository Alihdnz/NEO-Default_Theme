@model IList<DomainProduct.Entities.Brand>

@if (Model != null && Model.Count() > 0)
{
    <div class="ui container topsellers">
        <div class="ui horizontal divider">
            Marcas
        </div>
        <div class="ui grid">
            <div class="ui column cards centered car-maisvendidos slideshow">
                @foreach (var brand in Model)
                {
                    <div class="ui card produto">
                        <a href="@brand.UrlFriendly" title="@brand.Name">
                            <img class="ui image centered brands" src="@brand.Logo" alt="@brand.Name" title="@brand.Name" onerror="imgError(this)">
                        </a>
                    </div>
                }
            </div>
        </div>
        <div class="ui divider hidden"></div>
    </div>
}